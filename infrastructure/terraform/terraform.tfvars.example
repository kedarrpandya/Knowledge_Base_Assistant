# Example Terraform variables file
# Copy this file to terraform.tfvars and fill in your values

environment = "production"
location    = "eastus"
cost_center = "IT-AI-Platform"
owner_email = "admin@yourcompany.com"

# Azure OpenAI Configuration
openai_sku_name = "S0"
gpt4_capacity   = 30

# Cognitive Search Configuration
search_sku = "standard"

# App Service Configuration
app_service_sku = "P1v3"

# Network Security
allowed_ip_addresses = [
  "203.0.113.0/24",  # Office network
  "198.51.100.0/24"  # VPN network
]

# CORS Configuration
allowed_cors_origins = [
  "https://make.powerapps.com",
  "https://flow.microsoft.com",
  "https://yourcompany.sharepoint.com"
]

# Azure AD Configuration
aad_admin_group_id = "00000000-0000-0000-0000-000000000000"

# Security
enable_private_endpoints = true

# Monitoring
log_retention_days       = 90
enable_monitoring_alerts = true
alert_email_addresses = [
  "alerts@yourcompany.com",
  "platform-team@yourcompany.com"
]

# Additional Tags
tags = {
  Department = "IT"
  Compliance = "SOC2"
  DataClass  = "Internal"
}

